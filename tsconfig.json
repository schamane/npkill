{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/node-lts/tsconfig",
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/recommended/tsconfig"
  ],
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__"]
}
